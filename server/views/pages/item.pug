doctype html
html(lang='en')
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Item
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,700', rel='stylesheet')
    link(href='../bower_components/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='../bower_components/font-awesome/css/font-awesome.min.css', rel='stylesheet')
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
    link(rel='stylesheet', href='../css/item.css')
  body
    nav.navbar.navbar-default
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Home
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='login')
                | Login 
                span.sr-only (current)
            li
              a(href='register') Register
          form.navbar-form.navbar-right(method='get', action='/search')
            .form-group
              input.form-control(type='text', placeholder='Search', name='title')
            button.btn.btn-default(type='submit') Submit
    .mainContent.container-fluid
      .card
        .container-fluid
          .wrapper.row
            ins.adsbygoogle(style='display:block', data-ad-client='ca-pub-9155049400353686', data-ad-slot='5554792257', data-ad-format='auto')
            script.
              (adsbygoogle = window.adsbygoogle || []).push({});
            .preview.col-lg-5.col-md-8.col-sm-4.col-md-4
              .preview-pic.tab-content
                #pic-1.tab-pane.active(style='background-image: url("/'+ synth.image +'")')
                .container.secondaryPictures
            .details.col-md-4
              h3.product-title #{ synth.title } 
              span.user @Jovihu10
              p.product-description
                = synth.description
              h4.price
                | current price: 
                span 
                = synth.price +'€'
              p.vote
                strong 91%
                |  of users like this product! 
                strong (87 votes)
              h5.condition
                | condition:
                span.condition(data-toggle='tooltip', title='small') 
                = synth.condition 
              h5.aproved
                | aproved: 
                i.fa.fa-check-square(aria-hidden='true')
              .action
                .container
                  .row
                    .col-lg-2.col-md-2
                      button.btn.btn-primary.btn-md(data-toggle='modal', data-target='#ModalMessage')
                        span.glyphicon.glyphicon-envelope
                        |  Contact
                #ModalMessage.contact.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
                  .modal-dialog
                    form#FormMessage.form-horizontal
                      .modal-content
                        .modal-header.btn-primary
                          button.close(type='button', data-dismiss='modal')
                            span(aria-hidden='true') ×
                            span.sr-only Close
                          h4#myModalLabel.text-center Message
                        .modal-body
                          br
                          .control-group
                            label(for='destinataire') Sélectionner un service
                            select#FormMessageDestinatiare.form-control(name='destinataire')
                              option(value='0', selected='selected') Support
                          br
                          .control-group
                            label(for='destinataire') Sujet
                            input.form-control(name='sujet', type='text')
                          br
                          .control-group
                            label(for='destinataire') Message
                            textarea#FormMessageMessage.form-control(name='message', rows='5')
                          br
                        .modal-footer
                          .text-center
                            button.btn.btn-primary.btn-lg(type='submit')
                              span.glyphicon.glyphicon-send
                              |  Envoyer
                            button.btn.btn-default.btn-xs(type='button', data-dismiss='modal') Fermer
                button.alerts.add-to-cart.btn.btn-danger(type='submit') Send alert
    .footer.container-fluid
      .row
        .col-lg-1
        .col-lg-6
          a.copyRight(href='mailto:joelvila101@gmail.com') Copyright © Joël Vila
